<!-- Custom rule: Detect 'sudo whoami'-->
<group name="auditd,">
  <rule id="109001" level="5">
    <if_sid>80792</if_sid>
    <field name="audit.command">whoami</field>
    <field name="audit.euid">0</field>
    <description>Detected 'sudo whoami' execution.</description>
    <group>privilege_escalation, reconnaissance,</group>
  </rule>
</group>
