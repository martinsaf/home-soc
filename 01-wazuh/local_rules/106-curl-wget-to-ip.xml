<!-- 106-curl-wget-to-ip.xml -->

<group name="local,network,egress">
  <!-- Match curl to IP -->
  <rule id="100106" level="8">
    <match>curl http://</match>
    <description>Direct HTTP fetch with curl to raw IP (suspicious unsigned external fetch)</description>
    <group>egress,commandLine,</group>
    <mitre>
      <id>T1071</id>
    </mitre>
  </rule>

  <!-- Match wget to IP -->
  <rule id="100107" level="8">
    <match>wget http://</match>
    <description>Direct HTTP fetch with wget to raw IP (suspicious unsigned external fetch)</description>
    <group>egress,commandLine,</group>
    <mitre>
      <id>T1071</id>
    </mitre>
  </rule>
</group>

